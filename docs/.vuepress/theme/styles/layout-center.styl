// draft center layout
.theme-container, .navbar {
	@extend .max-w-screen-xl;
	@extend .mx-auto;
	@extend .relative;
}

@media (min-width: $MQNarrow) {
	.sidebar {
		position: fixed;
		left: inherit;
		border-right: none;
	}

	.navbar {
		position: sticky;
	}

	// center links/search
	header.navbar .links {
		right: inherit;
		left: 21rem;

		.nav-links {
			margin-left: auto;
		}
	}

	div.search-box {
		margin-right: 0;

		input, .suggestions {
			width: 30em;
			border-radius: 3px;
		}
	}

	footer.page-edit {
		margin: inherit;
	}
}

.theme-default-content:not(.custom) {
	margin: inherit;

	& > h1 {
		padding-top: 1em;
	}
}