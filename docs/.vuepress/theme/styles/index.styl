@import 'sidebar';
@import 'video';

#app {
	.theme-container {
		max-width: 1080px;
	}

	.navbar .logo {
		margin-right: 0.5rem;
	}

	.site-name:after {
		content: 'beta';
		font-size: 0.6rem;
		margin-left: 0.5rem;
		position: relative;
		top: -7px;
		background-color: $highlightColor;
		padding: 0.2rem;
		transition: all 0.5s;
	}

	.site-name {
		&:hover {
			&:after {
				top: -9px;
			}
		}
	}
}

:root {
	--accent-color: $accentColor;
	--text-color: $textColor;
	--border-color: $borderColor;
	--code-bg-color: $codeBgColor;
	--highlight-color: $highlightColor;
}