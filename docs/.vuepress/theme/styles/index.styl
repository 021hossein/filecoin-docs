@import 'util';
@import 'layout-center';
@import 'sidebar';
@import 'video';

#app {
	.navbar .logo {
		height: 2.5rem;
		margin: 0;
		padding-right: 0.2rem;
		vertical-align: top;
	}

	.site-name {
		font-size: 1.5rem;
		letter-spacing: -0.05rem;
	}

	.site-name:after {
		content: 'beta';
		font-size: 0.6rem;
		margin-left: 0.3rem;
		position: relative;
		top: -7px;
		background-color: $highlightColor;
		padding: 0.2rem;
		letter-spacing: 0;
	}
}

:root {
	--accent-color: $accentColor;
	--text-color: $textColor;
	--border-color: $borderColor;
	--code-bg-color: $codeBgColor;
	--highlight-color: $highlightColor;
}
